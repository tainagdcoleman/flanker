#:kivy 1.10.1

#:import update main.update
#:import start_game main.start_game

<MyLayout@GridLayout>:  
    row_force_default: True
    row_default_height: 40
    cols: 2
    
    Label:
        text: 'Nome:'
    TextInput:
        id: name  
        text: ''
        on_text: update('name', self.text)

    Label:
        text: 'Data de nascimento:'
    TextInput:
        id: dob  
        text: '' 
        on_text:  update('dob', self.text)

    Label:
        text: 'Regiao:'
    TextInput:
        id: region  
        text: ''  
        on_text: update('region', self.text)



<StartWidget>:
    MyLayout:
        id: form
        pos: 0, 0
        size: root.width / 2, root.height    
    Button:
        text: "Flanker"
        pos: root.width / 2, 0
        size: root.width / 2, root.height / 2
        on_release: start_game('flanker')
    Button:
        text: "Memory"
        pos: root.width / 2, root.height / 2
        size: root.width / 2, root.height / 2
        on_release: start_game('memory')